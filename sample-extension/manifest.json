{
  "manifest_version": 3,
  "name": "Simple Message",
  "version": "1.0",
  "description": "クリックするとメッセージを表示する簡単な拡張機能です。",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
